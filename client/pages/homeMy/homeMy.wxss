/**index.wxss**/

page {
  background: #F3F3F3;
}

.userinfo {
  width: 100%;
  text-align: center;
  padding-bottom: 15rpx;
  margin-bottom: 20rpx;
  background:#FD6460;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}


.userinfo-nickname {
  font-size: 20pt;
  color: white;
  background-color: #FD6460;
  border: none;
}
.userinfo-nickname1 {
  font-size: 20pt;
  color: white;
  background-color: #FD6460;
  border: none;
  margin-top: 25rpx;
}
.userinfo-nickname::after{
  border: none;
}

.order,.take_order,.info{
  width: 70%;
  text-align: center;
  transition: all 300ms ease;
  margin: 10rpx 0;
}

.my_order-List,.my_take_order-List,.my_info-List{
  padding: 26rpx 0; 
  background-color: white;
  width: 100%;
  border-radius: 50rpx;
  font-size: 16pt;
  
}

.logout{
  text-align: center;
  width: 70%;
  margin: 10rpx 0;
}

.logout-btn{
  text-align: center;
  padding: 26rpx 0; 
  background-color: white;
  border-radius: 50rpx;
  font-size: 16pt;
}




