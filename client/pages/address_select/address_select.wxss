.container {
  height: 100%;
  width: 100%;
  position: absolute;
  background-color: #f3f3f3;
}

.label {
  width: 100%;
  padding-top: 3%;
  padding-bottom: 2%;
  border-bottom: 2px solid white;
  display: flex;
}

.personal_info {
  display: flex;
  height: 50%;
}

.radio-group {
  width: 90%;
  height: 60%;
}
.name {
  font-size: 35rpx;
}

.phone {
  margin-left: 15rpx;
  font-size: 33rpx;
}

.decom {
  font-size: 36rpx;
}

.button_new_address {
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fd6460;
  height: 8%;
  text-align: center;
  line-height: 2.5;
  margin-top: 3rpx;
}

.each_row{
  display: flex;
}
.icon_change{
  margin-top: 38rpx;
  height: 40rpx;
  width: 40rpx;
}
