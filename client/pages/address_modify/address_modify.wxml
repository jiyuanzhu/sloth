<view class="container">
  <form bindsubmit='formSubmit'>
    <view class="text_each_row">
      <view class="text">联系人</view>
      <textarea name="namearea" placeholder="联系人姓名" class="nameinput" />
    </view>
    <view class="text_each_row">
      <view class="text">手机号码</view>
      <textarea name="phonearea" placeholder="可以联系到你的号码" class="phoneinput" />
    </view>
    <view class="text_each_row">
      <view class="text">收货地址</view>
      <textarea name="addressarea" placeholder="学校/校区/宿舍号" class="addrinput" />
    </view>
    <view class='save_btn'>
      <button class='s_btn' formType='submit'>保存地址</button>
    </view>
    <view class='del_btn'>
      <button formType='submit'>删除地址</button>
    </view>
  </form>
</view>