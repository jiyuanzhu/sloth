/**index.wxss**/

page {
  background: #24212105;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  height: 140rpx;
  width: 100%;
  padding-bottom: 15rpx;
  margin-bottom: 20rpx;
  background:#FD6460;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: white;
  background-color: #FD6460;
}
.userinfo-nickname::after{
  border: none;
}

.order,.address,.help{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
    
}

.order-List, .address-List, .help-List {
  padding: 16rpx; 
  font-size: 30rpx;
  background-color: white;
  width: 100%;
  
}

.logout{
  top: 80rpx;
  position: relative;
  border: none;
}

.logout-btn{
  background-color: white;
  font-size: 30rpx;
}




