.container{
  height: 100%;
  width: 100%;
  position: absolute;
  background: linear-gradient(#FD6460, white);
}

.swiper{
  height: 32%;
  width: 85%;
  box-shadow: 0 1px 2px #707070;
  position: absolute;
  top: 1%;
  z-index: 1;
  border-radius: 3%;
}
swiper{
  height: 100%;
  border-radius: 3%;
}

swiper-item{
  border-radius: 3%;
}

swiper image{
  height: 100%;
  width: 100%;
}

.modules{
  text-align: center;
  width: 100%;
  height: 76%;
  background-color: white;
  position: absolute;
  top: 24%;
  border-radius: 6%;
}

.modulesBottom{
  border: 1px solid #f3f3f3;
  border-radius: 4%;
  height: 43.4%;
  width: 32.4%;
  display: inline-block;
  color: #888888;
  position: relative;
  top: 12%;
  border-top-color: white;
}

.modulesBottom image{
  height: 100rpx;
  width: 100rpx;
  margin-top: 100rpx;
  margin-bottom: 15rpx;
}
